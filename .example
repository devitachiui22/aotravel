# ============================================
# üöÄ AOtravel Backend Configuration
# ============================================

# Ambiente
NODE_ENV=production
PORT=3000

# Banco de Dados PostgreSQL (NeonDB)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Redis (Cache e Sess√µes)
REDIS_URL=redis://:password@host:port
REDIS_PASSWORD=your_redis_password

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Criptografia
ENCRYPTION_KEY=32_character_encryption_key_here
ENCRYPTION_IV=16_character_iv_here

# Uploads
MAX_FILE_SIZE=104857600 # 100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=AOtravel <noreply@aotravel.ao>

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# AWS S3 (Armazenamento de Arquivos)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=aotravel-uploads
AWS_CLOUDFRONT_URL=https://d123456.cloudfront.net

# Pagamentos (MPesa, Stripe, etc.)
MPESA_CONSUMER_KEY=your_mpesa_key
MPESA_CONSUMER_SECRET=your_mpesa_secret
MPESA_SHORTCODE=123456
MPESA_PASSKEY=your_passkey

STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Maps/Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# New Relic (Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=AOtravel Backend

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://app.aotravel.ao,https://admin.aotravel.ao,http://localhost:3000

# Seguran√ßa
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
REQUEST_LOGGING=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_ROTATION_DAYS=30

# Admin
ADMIN_EMAIL=admin@aotravel.ao
ADMIN_PASSWORD_HASH=hashed_admin_password

# Sistema
APP_NAME=AOtravel
APP_VERSION=2026.02.10
COMPANY_NAME=AOtravel Angola Lda
SUPPORT_PHONE=+244 900 000 000
SUPPORT_EMAIL=support@aotravel.ao

# Features
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_BIOMETRIC_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=true

# Pre√ßos
BASE_RIDE_PRICE=600
RIDE_KM_RATE=300
MOTO_BASE_PRICE=400
MOTO_KM_RATE=180
DELIVERY_BASE_PRICE=1000
DELIVERY_KM_RATE=450

# Comiss√µes
DRIVER_COMMISSION=0.8 # 80%
PLATFORM_COMMISSION=0.2 # 20%

# Tempos
DRIVER_SEARCH_TIMEOUT=600 # 10 minutos
RIDE_CANCEL_TIMEOUT=300 # 5 minutos
AUTO_COMPLETE_TIMEOUT=86400 # 24 horas

# Cache
CACHE_TTL=3600 # 1 hora
SESSION_TTL=2592000 # 30 dias

# Debug
DEBUG=false
DEBUG_SOCKET=false
DEBUG_DATABASE=false
