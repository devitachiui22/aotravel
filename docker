# Dockerfile para AOtravel Backend Ultimate
FROM node:20.11.0-alpine AS builder

WORKDIR /app

# Instalar dependências de build
RUN apk add --no-cache python3 make g++ postgresql-client

# Copiar package.json
COPY package*.json ./

# Instalar dependências
RUN npm ci --only=production && npm cache clean --force

# --- Estágio de produção ---
FROM node:20.11.0-alpine

WORKDIR /app

# Criar usuário não-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S aotravel -u 1001 -G nodejs

# Instalar dependências do sistema
RUN apk add --no-cache tzdata postgresql-client curl

# Configurar timezone (Angola/Luanda)
ENV TZ=Africa/Luanda

# Copiar node_modules do estágio builder
COPY --from=builder /app/node_modules ./node_modules

# Copiar código da aplicação
COPY --chown=aotravel:nodejs . .

# Criar diretórios necessários
RUN mkdir -p uploads logs backups && \
    chown -R aotravel:nodejs uploads logs backups

# Mudar para usuário não-root
USER aotravel

# Porta exposta
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/ || exit 1

# Comando de inicialização
CMD ["node", "server.js"]
